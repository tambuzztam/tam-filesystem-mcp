{
  "name": "tam-filesystem-mcp",
  "version": "1.0.0",
  "description": "Enhanced MCP filesystem server with Obsidian-aware task and prompt management for philosophical counseling workflows",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tam-filesystem-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "prepare": "npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "mcp",
    "filesystem",
    "obsidian",
    "task-management",
    "prompt-management",
    "philosophical-counseling",
    "knowledge-management"
  ],
  "author": "Benjamin Polansky",
  "license": "MIT",
  "homepage": "https://github.com/tambuzztam/tam-filesystem-mcp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tambuzztam/tam-filesystem-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/tambuzztam/tam-filesystem-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "gray-matter": "^4.0.3",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.1",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "@modelcontextprotocol/server-filesystem": "^0.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
